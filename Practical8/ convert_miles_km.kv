BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: input_miles
        text: '0'
        multiline: False
        input_filter: 'float'
        font_size: 32
        size_hint_y: 0.3

    Label:
        id: output_label
        text: '0.0'
        font_size: 32
        size_hint_y: 0.3

    GridLayout:
        cols: 3
        spacing: 10
        size_hint_y: 0.3

        Button:
            text: "-1"
            on_press: app.handle_increment(-1)

        Button:
            text: "Convert"
            on_press: app.handle_convert()

        Button:
            text: "+1"
            on_press: app.handle_increment(1)
